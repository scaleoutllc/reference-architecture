#!/bin/bash
# A convenience script for rapidly standing up complex infrastructure.
set -euo pipefail
SCRIPT_PATH="$(cd "$(dirname "$BASH_SOURCE[0]")"; pwd -P)"

# Add script path to path so we can call "infra" without a full path.
export PATH="${PATH}:${SCRIPT_PATH}"

function usage {
  echo "Usage: $0 [--dry-run] <validate|apply|destroy> <group>"
  exit 1
}

[[ "$#" -lt 2 ]] && usage

export DRY_RUN=false
if [[ "$1" == "--dry-run" ]]; then
    DRY_RUN="true"
    shift
fi

DEP_ORDER="cat"
if [[ "$1" == "destroy"  ]]; then
  DEP_ORDER="tac"
fi

terrallel $2 | $DEP_ORDER | while IFS= read -r line; do
  parallel --ungroup --halt soon,done=100% --term-seq INT,600000 tf init ::: ${line}
  parallel --ungroup --halt soon,done=100% --term-seq INT,600000 tf $1 ::: ${line}
done